<% include ./partials/dashboardnavbar %>
<form action='/entries/edit/<%=diary.id%>' method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="exampleFormControlInput1">Title</label>
      <input type="text" name="title" class="form-control" id="exampleFormControlInput1" value="<%=diary.title%>" required>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Diary</label>
      <textarea class="form-control" name="entry"  id="exampleFormControlTextarea1" rows="5" required><%=diary.body%></textarea>
    </div>
    <div class="form-group">
      <label for="image">Change image if you need </label>
      <input type="file" class="form-control-file" name='picture' id="image" accept="image/*">
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="visibility" id="exampleRadios1" value="private" checked>
      <label class="form-check-label" for="exampleRadios1">
        Private
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="visibility" id="exampleRadios2" value="public">
      <label class="form-check-label" for="exampleRadios2">
        Public
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
  </form>
